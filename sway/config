# Sway configs


# Vars
set $scripts ~/dotfiles/scripts
set $exec exec --no-startup-id
set $mod Mod1


# Local config
include ~/.config/swaylocal


# Input
input * {
    xkb_layout "gb"
}
input type:touchpad {
	tap enabled
	natural_scroll enabled
}


# Output

xwayland enable
seat * hide_cursor 600


# Controls
## Move focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

## Move window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## Spawn horizontal/vertical
bindsym $mod+h split h
bindsym $mod+v split v

## Fullscreen
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split, floating)
bindsym $mod+u layout stacking
bindsym $mod+y layout tabbed
bindsym $mod+Tab layout toggle split
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
# bindsym $mod+space focus mode_toggle

# Workspace Names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# Switching 
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3

bindsym $mod+q workspace $ws4
bindsym $mod+w workspace $ws5
bindsym $mod+e workspace $ws6

bindsym $mod+a workspace $ws7
bindsym $mod+s workspace $ws8
bindsym $mod+d workspace $ws9

# Moving containers 
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3

bindsym $mod+Shift+q move container to workspace $ws4
bindsym $mod+Shift+w move container to workspace $ws5
bindsym $mod+Shift+e move container to workspace $ws6

bindsym $mod+Shift+a move container to workspace $ws7
bindsym $mod+Shift+s move container to workspace $ws8
bindsym $mod+Shift+d move container to workspace $ws9

# Reload/Restart 
bindsym $mod+Shift+r $exec swaymsg reload

# Border  
default_border pixel 2

# class                 border  backgr. text    indicator child_border
client.focused          #8a35F1 #00ffff #ffffff #00ffff   #8a35F1   
client.unfocused        #000501 #000501 #ffffff #000501   #000501


# Startup applications
exec --no-startup-id dunst


# Keybindings

## Workplace--Monitor assignments
bindsym $mod+Shift+h move workspace to output $right
bindsym $mod+Shift+g move workspace to output $left

## Lockscreen Shortcuts 
bindsym $mod+l $exec $scripts/lock.sh lock
bindsym $mod+Control+l $exec $scripts/lock.sh suspend
bindsym $mod+Control+Shift+l $exec $scripts/lock.sh hibernate

## Volume
bindsym XF86AudioRaiseVolume $exec $scripts/sound.sh up
bindsym XF86AudioLowerVolume $exec $scripts/sound.sh down
bindsym XF86AudioMute        $exec $scripts/sound.sh mute

## Launch/kill applications
bindsym $mod+F1 $exec bemenu-run
bindsym $mod+F2 $exec brave
bindsym $mod+Return $exec alacritty
bindsym $mod+Shift+x kill


