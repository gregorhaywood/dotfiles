# Sway configs


# Vars
set $scripts ~/dotfiles/scripts
set $exec exec --no-startup-id
set $mod Mod1


# Local config
include ~/.config/swaylocal


# Input
input * {
    xkb_layout "gb"
}
input type:touchpad {
	tap enabled
	natural_scroll enabled
}


# Output

xwayland enable
seat * hide_cursor 600


# Controls
## Move focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

focus_wrapping no

## Move window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## Spawn horizontal/vertical
bindsym $mod+h split h
bindsym $mod+v split v

## Scratchpad (hidden but accessible)
bindsym $mod+Grave scratchpad show
bindsym $mod+Shift+Grave move container scratchpad

## Fullscreen
bindsym $mod+f fullscreen toggle

## Floating
bindsym $mod+a floating toggle
bindsym $mod+s focus mode_toggle

# Workspace Names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"

# Switching 
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3

bindsym $mod+q workspace $ws4
bindsym $mod+w workspace $ws5
bindsym $mod+e workspace $ws6

# Moving containers 
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3

bindsym $mod+Shift+q move container to workspace $ws4
bindsym $mod+Shift+w move container to workspace $ws5
bindsym $mod+Shift+e move container to workspace $ws6

# Reload/Restart 
bindsym $mod+Shift+r $exec swaymsg reload

# Border  
default_border pixel 4
smart_borders on
smart_gaps on
floating_modifier $mod
force_display_urgency_hint 100


# class                 title   title   title   "new"	  normal
#						border  bg		text	border	  border
client.focused          #8a35F1 #000501 #ffffff #ff6e27   #00ffff   
client.unfocused        #000501 #000501 #ffffff #000501   #000501
client.focused_inactive #000501 #000501 #ffffff #000501   #000501
# client.focused_tab_title
# client.urgent (Xwayland only)

# Startup applications
exec --no-startup-id dunst


# Keybindings

## Workplace--Monitor assignments
bindsym $mod+Shift+h move workspace to output $right
bindsym $mod+Shift+g move workspace to output $left

## Lockscreen Shortcuts 
bindsym $mod+l $exec $scripts/lock.sh lock
bindsym $mod+Control+l $exec $scripts/lock.sh suspend
bindsym $mod+Control+Shift+l $exec $scripts/lock.sh hibernate

## Volume
bindsym XF86AudioRaiseVolume $exec $scripts/sound.sh up
bindsym XF86AudioLowerVolume $exec $scripts/sound.sh down
bindsym XF86AudioMute        $exec $scripts/sound.sh mute

bindsym Menu+F3 $exec $scripts/sound.sh up
bindsym Menu+F2 $exec $scripts/sound.sh down
bindsym Menu+F1 $exec $scripts/sound.sh mute

## Launch/kill applications
bindsym $mod+F1 $exec sirula
bindsym $mod+F2 $exec brave
bindsym $mod+Return $exec alacritty
bindsym $mod+Shift+x kill

